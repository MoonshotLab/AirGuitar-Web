html, body
  width 100%
  height 100%

body
  background-color black
  color white
  padding 0
  margin 0
  font-family "Helvetica"


.container
  max-width 960px
  margin auto
  overflow hidden


video
  margin-left -25%
  width 150%


.slowmo-container
  overflow hidden
  margin-bottom 50px



#footer
  padding 20px 0
  width 100%
  font-size 130%
  background-color white
  border-top 2px solid grey
  position fixed
  bottom 0
  a
    color black
    text-decoration none


.next-page
  float right

.prev-page
  float left


@media only screen and (min-width: 768px)
  .slowmo-container
    width 25%
    margin-left 5%
    height 100%
    float left
    display inline-block
    video
      margin-left -25%


@media only screen and (max-width: 767px)
  .slowmo-container
    margin-left 12%
    width 75%
    display block
