body
  background-color black
  color white
  margin 0
  font-family "Helvetica"

h1.thats-all
  margin-top 75px
  margin-bottom 75px

h1
  text-align center
  margin 0
  a
    background url('/header.jpg') no-repeat top center
    margin 0 0 10px 0
    background-size cover
    width 100%
    height 316px
    display block
    text-indent -9999px


.container
  max-width 960px
  margin auto
  overflow hidden


video
  width 100%


.slowmo-container
  overflow hidden
  margin-bottom -2px
  border 5px solid black
  box-sizing border-box


footer
  width 100%
  font-size 100%
  bottom 0
  a.next, a.prev
    display block
    text-decoration none
    color white
    font-weight bold
  a.next
    padding 20px 20px 0 50px
  a.prev
    padding 20px 50px 0 20px

  span.arrow
    color #bd3013
  a.prev
    span.arrow
      float left
      padding-right 10px
  a.next
    span.arrow
      padding-left 10px

  a.credits
    margin-top 50px
    width 100%
    height 100px
    display block
    background url('/footer.jpg') no-repeat top center
    background-size contain

.social
  float right
  .stButton
    width 25px
    img
      display none
  .stLarge
    background-size 100%
  .st_facebook_large
    .stLarge
      background-image url('/social_fb.jpg') !important
  .st_twitter_large
    .stLarge
      background-image url('/social_tweet.jpg') !important
  .st_email_large
    .stLarge
      background-image url('/social_email.jpg') !important

.next-page
  float right

.prev-page
  float left


#content.solo
  .slowmo-container
    width 50%
    margin auto
    display block
    float none


@media only screen and (min-width: 768px)
  .slowmo-container
    width 33.3%
    height 100%
    float left
    display inline-block


@media only screen and (max-width: 767px)
  h1
    margin-bottom -30px
    a
      height 200px
      width 100%
      background-size contain
  .slowmo-container
    margin-left 5%
    width 90%
    display block
    video
      min-height 300px

  #content.solo
    .slowmo-container
      width 80%
