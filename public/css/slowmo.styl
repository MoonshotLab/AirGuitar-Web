body
  background-color black
  color white
  padding 0
  margin 0
  font-family "Helvetica"


.container
  width 400px
  margin auto
  overflow hidden


video
  -webkit-filter: brightness(2);
  margin-left: -125px


.slowmo-container
  width 100%
  height 100%
  overflow hidden
  color rgba(255,255,255,.75)
  margin-bottom 50px
  a
    color white
    text-decoration none
  h3
    margin-bottom 10px



#pagination
  padding 20px 0
  width 100%
  font-size 130%
  background-color white
  border-top 2px solid grey
  a
    color black
    text-decoration none


.next-page
  float right

.prev-page
  float left
