body
  background-color black
  color white
  padding 0
  margin 0
  font-family "Helvetica"


.container
  width 400px
  margin auto
  overflow hidden


#code-entry
  background-color white
  color black
  padding 20px
  margin-bottom 50px

  label
    display block
    font-size 20px
    margin-bottom 20px
  input
    font-family Helvetica
    display block
  input[type='text']
    width 92.5%
    padding 5%
    padding-right 0
    font-size 130%
    margin-bottom 10px
  input[type='button']
    font-size 120%
    background-color rgba(0,0,0,.2)
    padding 10px 50px
    border none


video
  -webkit-filter: brightness(2);
  margin-left: -125px


.slowmo-container
  width 100%
  height 100%
  overflow hidden
  color rgba(255,255,255,.75)
  margin-bottom 50px


#pagination
  padding 20px 0
  width 100%
  font-size 130%
  background-color white
  border-top 2px solid grey
  a
    color black
    text-decoration none


.next-page
  float right

.prev-page
  float left
