.unit
  z-index 2
  position absolute
  display block
  width 100%
  height 100%
  left 0
  top 0
  -webkit-mask-repeat no-repeat
  -webkit-mask-size contain
  background-color yellow



for blockId in (0..3)
  for unitNum in (0..3)
    #unit-{blockId}-{unitNum}
      -webkit-mask-image url('/masks/' + blockId + '-' + unitNum + '.svg')

.unit-0
  top -.5%

.unit-1
  -webkit-mask-position bottom right
  left .5%

.unit-2
  top .5%
  -webkit-mask-position bottom

.unit-3
  left -.5%


.unit-0, .unit-2
  width 102%
  margin-left -1%

.unit-1, .unit-3
  height 102%
  margin-top -1%
