html, body
  width 100%
  height 100%
  margin 0
  padding 0
  overflow hidden


#map-surface
  width 840px
  position absolute
  z-index 4
  opacity .5
  display none


#map
  overflow hidden
  background-color black
  width 840px
  height 840px
  margin auto
  position relative


.block
  z-index 2
  position relative
  width 50%
  height 50%
  display block
  float left
  overflow hidden


.unit
  z-index 2
  position absolute
  display block
  width 100%
  height 100%
  left 0
  top 0
  -webkit-mask-repeat no-repeat
  -webkit-mask-size contain
  background-color yellow



for blockId in (0..3)
  for unitNum in (0..3)
    #unit-{blockId}-{unitNum}
      -webkit-mask-image url('/masks/' + blockId + '-' + unitNum + '.svg')


.unit-1
  -webkit-mask-position bottom right

.unit-2
  -webkit-mask-position bottom

.unit-0, .unit-2
  width 102%
  margin-left -1%

.unit-1, .unit-3
  height 102%
  margin-top -1%

video
  position absolute
  margin-left -50%
  width 200%

.show
  display block

.hide
  display none
