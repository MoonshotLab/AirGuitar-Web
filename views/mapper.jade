extends layout

block head
  title Projection Mapper
  link(rel='stylesheet', href='mapper.css')
  script(src='mapper.js')
  script(src='utils.js')

block content
  - var blocksInMap = 4;
  - var unitsInBlock = 4;
  #map
    img#map-surface(src='/surface.jpg')
    video(id='video-master', autoplay="true", loop="true")
      source(src="")
    - for(var i=0; i<blocksInMap; i++){
      .block(id="block-#{i}")
        - for(var j=0; j<unitsInBlock; j++){
          .unit(id="unit-#{i}-#{j}", class="unit-#{j}")
        - }
        video(id="video-#{i}", autoplay="true", loop="true")
          source(src="")
    - }
